<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.br.bottomnavigationview.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/feed"
        android:name="com.br.bottomnavigationview.fragment.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" />

    <fragment
        android:id="@+id/cartao"
        android:name="com.br.bottomnavigationview.fragment.CartaoFragment"
        android:label="fragment_cartao"
        tools:layout="@layout/fragment_cartao" />

    <fragment
        android:id="@+id/ajuda"
        android:name="com.br.bottomnavigationview.fragment.AjudaFragment"
        android:label="fragment_ajuda"
        tools:layout="@layout/fragment_ajuda" />
    <fragment
        android:id="@+id/pagamentoFragment"
        android:name="com.br.bottomnavigationview.fragment.PagamentoFragment"
        android:label="fragment_pagamento"
        tools:layout="@layout/fragment_pagamento" />

    <action
        android:id="@+id/action_global_pagamentoFragment"
        app:destination="@id/pagamentoFragment"/>

</navigation>